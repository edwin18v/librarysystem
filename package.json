{
  "name": "librarian-frontend",
  "version": "0.1.0",
  "author": {
    "name": "Library System Developer",
    "email": "dev@library.system"
  },
  "private": true,
  "dependencies": {
    "cors": "^2.8.5",
    "cra-template-pwa": "2.0.0",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "png-to-ico": "^3.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7",
    "web-vitals": "^5.1.0",
    "xlsx": "^0.18.5"
  },
  "main": "public/electron.js",
  "homepage": ".",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:pack": "npm run build && electron-builder -w"
  },
  "build": {
    "appId": "com.library.system",
    "productName": "LibrarySystem",
    "files": [
      "build/**/*",
      "server.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist_setup",
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "wait-on": "^9.0.3"
  }
}
